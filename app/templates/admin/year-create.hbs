<section id="admin-task-edit" class="container content-section" style="text-align:justify">
  <h2>Nový ročník</h2>
  {{#link-to "admin/years"}}Zpět na přehled{{/link-to}}
  <div class="panel panel-ksi" style="margin-top:20px">
    <div class="panel-body">

      <div class="form-group">
        <label>Index ročníku:</label>
        {{input class="form-control" value=index}}
      </div>

      <div class="form-group">
        <label>Ročník:</label>
        {{input class="form-control" value=year}}
      </div>

      {{#if saving}}
        <button class="btn btn-primary inline disabled" id="save">Ukládám...</button>
      {{else}}
        <button class="btn btn-primary inline" id="save" {{action "year-create"}}>Vytvořit nový ročník</button>
      {{/if}}

      {{#if error_status}}
        <div class="alert alert-danger" style="margin-top:20px">{{error_status}}</div>
      {{/if}}
    </div>
  </div>
</section>
