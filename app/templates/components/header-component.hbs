<!-- header content -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="z-index:150">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {{#link-to "index" class="navbar-brand" rel="home"}}
                <div>
                    <img src="img/karlik_color.png" style="max-width:50px; vertical-align: middle;"/>
                    <span style="vertical-align: middle;"> Korespondenční seminář z informatiky</span>
                </div>
            {{/link-to}}
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse in">
            <ul class="nav navbar-nav navbar-left" style="height: 50px">
                <li>
                    {{#link-to "tasks"}}Úlohy{{/link-to}}
                </li>
                <li>
                    {{#link-to "results"}}Výsledky{{/link-to}}
                </li>
                <li>
                    {{#link-to "articles"}}Novinky{{/link-to}}
                </li>
                <li>
                    {{#link-to "forum"}}Diskuse{{/link-to}}
                </li>
                <li>
                    {{#link-to "faq"}}FAQ{{/link-to}}
                </li>
              </ul>
              <ul class="nav navbar-nav navbar-right" style="height: 50px">
                {{#if model.signed_in}}
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                      <div style="text-align:center;">
                        <div style="display:inline">
                    				<img src="{{model.profile_pic}}" style="width:50px;"/>
                        </div>
                        <div id="header-text" style=" margin-left:10px; display:inline">
                          {{model.name}}
                        </div>
                        <div style=" margin-left:10px; display:inline">
                          <span class="glyphicon glyphicon-menu-down" aria-hidden="true" style="color:#fff"></span>
                        </div>
                      </div>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu"> <!-- TODO odkazy -->
                      <li>{{#link-to "profile"}}Profil{{/link-to}}</li>
                      <li>{{#link-to "settings"}}Nastavení{{/link-to}}</li>
                      <li class="divider"></li>
                      <li><a href="#">Odhlásit se</a></li> <!-- TODO odhlasit -->
                    </ul>
                  </li>
                {{else}}
                  <li>
                    <button class="btn btn-primary outline navbar-btn" data-toggle="modal" data-target="#login-modal" role="button">Přihlásit se</button>
                  </li>
                  <li>
                      <form action="registrace.html">
                          {{#link-to "registration"}}
                          <button class="btn btn-primary outline navbar-btn" style="margin: 10px" role="button">Registrovat se</button>
                          {{/link-to}}
                      </form>
                  </li>
                {{/if}}
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
	 <div class="loginmodal-container">
     <div align="center">
		     <img src="img/karlik_color.png" style="max-width:200px; vertical-align: middle;"/>
     </div>
    <br>
	  <form>
  		<input type="text" name="user" placeholder="přihlašovací jméno">
  		<input type="password" name="pass" placeholder="heslo">
  		<input type="submit" name="login"  class="btn btn-primary" value="Přihlaš se">
	  </form>

	  <div class="login-help">
      {{#link-to "registration"}}Registrovat se{{/link-to}} - {{#link-to "forgot-password"}}Zapomenuté heslo{{/link-to}} <!-- TODO toogle button -->
	  </div>
	 </div>
  </div>
</div>
