<div class="row" style="margin:20px">
	{{{module.description}}}
	{{#if general_error}}
		{{warning-general text=general_error}}
	{{/if}}
</div>
<div class="controls" style="margin:20px">
	{{#each module.questions.questions as |question index|}}
		<div class="panel panel-task">
			<div class="panel-body">
				{{warning-general text="Polo≈æku je nutno vyplnit" id=(construct-id "w" id index) class="hide"}}
				{{{question.question}}}
				{{#each question.options as |option number|}}
					<div>
						{{log question.type}}
						<label>{{input type=question.type name=(construct-id "group" id index) id=(construct-id "id_q" index number) class=(construct-id "group" id index)}} {{option}}</label>
					</div>
				{{/each}}
			</div>
		</div>
	{{/each}}
</div>