<div class="panel panel-ksi">
	  <div class="panel-heading panel-heading-ksi" style="hight:400px">
      {{model.user.full_name}}
      <div style="float: right;">
        {{model.task_id.title}}
      </div>
    </div>
	  <div class="panel-body">
	     <!--<div id="date-text">
         řešení naposledy upraveno: 2.12.2014 16:35
         <div style="float: right;">
           Opravil: Heňo
         </div></div>
       <hr>

       <button class="btn btn-sm btn-primary" style="width: 250px; margin-left:0px">Stáhnout řešení</button>-->
       {{#each model.modules as |module|}}
       <div class="form-group" style="margin-top:20px col-md-12">
            <label>Body: </label>
            {{input style="display: inline;" class="form-control" size="4" value=model.evaluation.e.points}}      
       </div>
       {{/each}}

       <div class="form-group" style="margin-top:10px">
         <label>Přidat trofej: </label>
            <select class="form-control col-md-1">
              <option><img src="http://placehold.it/30x30"> trofej</option> <!-- TODO obrazky z databaze -->
              <option><img src="http://placehold.it/30x30"> trofej</option>
              <option><img src="http://placehold.it/30x30"> trofej</option>
            </select>
            <label> Trofeje:</label>
            <img src="http://placehold.it/30x30"> <!-- TODO kliknutim smazat -->
          {{#if invalid_data}}
             {{info-general text=invalid_data}}
          {{/if}}
       </div>
       <div class="form-group" style="margin-top:20px">
         <label>Komentář:</label>
         {{#if model.comment}}
          {{thread-view thread=model.comment}}
         {{else}}
           {{text-editor value=comment_content}}
					 <button class="btn btn-primary" style="margin-top:20px" {{action "comment"}}>Vložit komentář k řešení</button>				
           {{#if creating_comment}}
             {{info-general text="Ukládám komentář"}}
           {{/if}}
           {{#if comment_error}}
             {{warning-general text=comment_error}}
           {{/if}}
         {{/if}}
       </div>
    </div>
	</div>