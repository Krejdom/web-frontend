<div style="margin-top:30px">
	<h4>Změna hesla</h4>
	<hr>
</div>
<div class="password-email-container">
	{{#validatable-form action="change_password"}}
		<label>Staré heslo:</label>
		{{input value=old_password type="password" name="pass" placeholder="staré heslo" required=true title="Musíš vyplnit stávající heslo"}}
		<label>Nové heslo:</label>
		{{input value=new_password type="password" name="pass" placeholder="nové heslo" required=true title="Musíš vyplnit nové heslo (alespoň 6 znaků)" pattern=".{6,}"}}
		<label>Ověření hesla:</label>
		{{input value=new_password2 type="password" name="pass" placeholder="nové heslo znovu" required=true title="Musíš vyplnit ověření nového hesla (alespoň 6 znaků)" pattern=".{6,}"}}
		{{input type="submit" name="login"  class="btn btn-primary" value="Změnit"}}
	{{/validatable-form}}
</div>