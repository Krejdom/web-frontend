{{#if model.my_score}} <!-- TODO ozivit -->
<div style="margin:20px">
  <div style="margin-top:30px">
    <h5>Skóre:</h5>
    <hr>
  </div>

	<div class="progress" style="margin-top:20px">
		<div class="progress-bar progress-bar-warning progress-bar-ksi" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="10" style="width: {{progress_width}}%"><!-- TODO: max value = pocet max bodov z ulohy-->
			{{model.my_score.score}}&nbsp;/{{model.max_score}}
		</div>
	</div>

  <div style="margin-top:30px">
    <h5>Trofeje</h5>
    <hr>
  </div>

  <div class="panel panel-achievements">
    <div class="panel-body">
      <!-- TODO add achievements -->
    </div>
  </div>

  <div style="margin-top:30px">
    <h5>Výsledky</h5>
    <hr>
  </div>

  <table class="table table-striped table-hover-forum ">
    <thead>
      <tr style="height:45px">
        <th style="text-align: center;">Název úlohy</th>
        <th>Opravující</th>
        <th style="text-align: center;">Body</th>
        <th>Stav</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td style="text-align: center;">Kviz1</td> <!-- Jmeno ulohy -->
          <td>Honza</td> <!-- opravujici -->
          <td style="text-align: center;">2/2</td> <!-- body -->
          <td>opraveno</td> <!-- stav -->
        </tr>
    </tbody>
  </table>

  <div style="margin-top:50px">
    <h5>Komentář ke tvému řešení:</h5>
    <hr>
  </div>

  {{thread-view thread=model.thread store=store}}
</div>
{{else}}
  {{info-general text="Tuto úlohu jsi zatím neodevzdal."}} <!-- TODO -->
{{/if}}
